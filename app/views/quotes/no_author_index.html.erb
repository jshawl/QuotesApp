<h2>all quotes</h2>
<!-- I recommend combining all the index.html.erb files
into one and using conditionals to hide/show content or
prevent errors -->

<%= link_to "New Quote", new_quote_path %></br>

<% @quotes.each do | q | %>

  <div class="quote">
    <p>
      <%= link_to q.content, quote_path(q) %>
    </p>
    <% if q.author %>
      <p>
        ---<%= link_to q.author.name, author_path(q.author) %>
      </p>
    <% end %>
    <% if q.auteur%>
      <p>
        ---<%= q.auteur %>
      </p>
    <% end %>
  </div>

<% end %>
