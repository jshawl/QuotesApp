<h1>edit quote</h1>

<%= form_for :quote, url: quote_path(@quote), method: :patch do |f| %>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', quote_path(@quote) %>

<%= link_to 'Delete!', quote_path(@quote), method: :delete, class: 'delete' %>
